<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <style>
        button {
            margin-top: 20px;
            width: 100%;
            border: 1px solid #58566f;
            border-radius: 7px;
            padding: 7px;
            background-color: #58566f;
            color: #fff;
            font-weight: bold;
            font-size: 22px;
        }

        h1 {
            text-align: center;
        }

        table {
            border: 1px solid #585858;
            width: 100%;
            font-weight: bold;
            font-size: 18px;
            text-align: center
        }

        html {
            direction: rtl;
            box-sizing: border-box;
        }

        .card {
            margin-top: 5px;
            border: 1px solid #585858;
            border-radius: 5px;
            padding: 10px;
            background-color: #f7f7f7;
        }

        #winner {
            font-size: 30px;
            font-weight: bolder;
            color: brown;
            text-align: center;
        }

        .container {
            width: 90%;
            margin: auto;
        }
    </style>
</head>

<body>


    <div class="container">
        <div class="card">
            <table border="1">
                <h1>أصحاب الاجابات الصحيحة</h1>

                <% for(var i=0; i<answers.length; i++) { %>
                <tr>
                    <td><%= answers[i].phone %></td>
                </tr>
                <% } %>
            </table>
            <button id="btn"> اجراء قرعة </button>

        </div>


        <div class="card">
            <h1>الفائز</h1>
            <div id="winner"></div>
        </div>
    </div>

    <script>
        var winner = document.getElementById("winner")
        var btn = document.getElementById("btn")
        var td = document.getElementsByTagName("td")
        var timeOut = null;
        var loop = 20;
        var numbersArry = [];
        btn.addEventListener('click', function () {
            for (var i = 0; i < td.length; i++) {
                numbersArry.push(td[i].innerHTML)
            }
            function countDown() {

                timeOut = setTimeout(countDown, 120);
                loop--;
                if (loop == 0) {
                    clearTimeout(timeOut);
                    loop = 20;

                }
                winner.innerHTML = numbersArry[getRandomNumber(0, td.length)]
                // console.log(getRandomNumber(0, td.length))
            }
            countDown()

            function getRandomNumber(min, max) {
                return Math.floor(Math.random() * (max - min) + min)
            }



        })


    </script>
</body>

</html>